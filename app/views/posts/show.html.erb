<div class="max-w-2xl mx-auto">
  <div class="mb-4">
    <%= link_to "← Back to Feed", posts_path, class: "text-blue-600 hover:underline" %>
  </div>

  <article class="bg-white border border-gray-300 rounded-lg p-6 mb-6">
    <div class="flex items-center justify-between mb-4">
      <strong class="text-lg"><%= link_to @post.user.email, user_path(@post.user), class: "text-blue-600 hover:underline" %></strong>
      <small class="text-gray-500"><%= time_ago_in_words(@post.created_at) %> ago</small>
    </div>

    <p class="text-gray-800 mb-4"><%= @post.body %></p>

    <div class="text-sm text-gray-500 mb-4">
      <%= pluralize(@post.likes.count, "like") %> · <%= pluralize(@post.comments.count, "comment") %>
    </div>

    <div class="flex gap-2 pb-4 border-b border-gray-200">
      <% if @post.likes.exists?(user: current_user) %>
        <% like = @post.likes.find_by(user: current_user) %>
        <%= button_to "Unlike", post_like_path(@post, like), method: :delete, class: "text-red-600 hover:text-red-700 font-medium" %>
      <% else %>
        <%= button_to "Like", post_likes_path(@post), method: :post, class: "text-gray-600 hover:text-blue-600 font-medium" %>
      <% end %>
    </div>
  </article>

  <div class="bg-white border border-gray-300 rounded-lg p-6 mb-6">
    <h3 class="text-xl font-bold mb-4">Add a comment</h3>

    <% if @comment&.errors&.any? %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <h4 class="font-bold">Could not save comment:</h4>
        <ul class="list-disc list-inside">
          <% @comment.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= form_with url: post_comments_path(@post), model: [@post, @comment || Comment.new], local: true do |f| %>
      <div class="mb-4">
        <%= f.text_area :body, placeholder: "Write a comment...", rows: 3, class: "w-full border border-gray-200 rounded px-3 py-2" %>
      </div>

      <%= f.submit "Comment", class: "bg-blue-600 hover:bg-blue-700 text-white px-4 py-2 rounded" %>
    <% end %>
  </div>

  <div>
    <h3 class="text-xl font-bold mb-4">Comments (<%= @post.comments.count %>)</h3>

    <% if @post.comments.any? %>
      <% @post.comments.each do |comment| %>
        <div class="bg-white border border-gray-300 rounded-lg p-4 mb-3">
          <div class="flex items-start justify-between">
            <div>
              <strong><%= link_to comment.user.email, user_path(comment.user), class: "text-blue-600 hover:underline" %></strong>
              <p class="text-gray-700 mt-1"><%= comment.body %></p>
              <small class="text-gray-500"><%= time_ago_in_words(comment.created_at) %> ago</small>
            </div>

            <% if comment.user == current_user %>
              <%= button_to "Delete",
                post_comment_path(@post, comment),
                method: :delete,
                class: "bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded text-sm",
                data: { turbo_confirm: "Delete this comment?" } %>
            <% end %>
          </div>
        </div>
      <% end %>
    <% else %>
      <p class="text-gray-600">No comments yet. Be the first!</p>
    <% end %>
  </div>
</div>
